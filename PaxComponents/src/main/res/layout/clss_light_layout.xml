        app:onSrc="@drawable/led_yellow_on" />

    <com.techun.paxcomponents.sdk_pax.module_emv.utils.ClssLight
        android:id="@+id/light3"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_20"
        android:layout_weight="1"
        android:contentDescription=""
        android:scaleType="fitCenter"
        android:src="@drawable/led_off"
        app:offSrc="@drawable/led_off"
        app:onSrc="@drawable/led_green_on" />

    <com.techun.paxcomponents.sdk_pax.module_emv.utils.ClssLight
        android:id="@+id/light4"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_20"
        android:layout_weight="1"
        android:contentDescription=""
        android:scaleType="fitCenter"
        android:src="@drawable/led_off"
        app:offSrc="@drawable/led_off"
        app:onSrc="@drawable/led_red_on" />

</LinearLayout>