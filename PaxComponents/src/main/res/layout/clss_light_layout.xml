        android:scaleType="fitCenter"
        android:src="@drawable/led_off"
        app:offSrc="@drawable/led_off"
        app:onSrc="@drawable/led_blue_on" />

    <com.techun.paxcomponents.sdk_pax.module_emv.utils.ClssLight
